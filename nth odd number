public class NthOddNumber {
    public static void main(String[] args) {
        int n = 10; // change this to find the nth odd number
        System.out.println("The " + n + "th odd number is: " + findNthOddNumber(n));
    }

    public static int findNthOddNumber(int n) {
        return 2 * n - 1;
    }
}
